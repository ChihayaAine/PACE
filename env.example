# =============================================================================
# PACE Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# Web Scraping API (You.com Contents API)
# =============================================================================
YOUCOM_API_URL=https://api.ydc-index.io/v1
YOUCOM_API_KEY=your-youcom-api-key-here

# =============================================================================
# Web Search API (Google Search via external service)
# =============================================================================
SEARCH_API_URL=https://your-search-api-endpoint.com/v1
SEARCH_API_KEY=your-search-api-key-here
SEARCH_API_ID=your-search-api-id-here

# =============================================================================
# Main LLM API (for agent reasoning)
# =============================================================================
LLM_API_KEY=your-llm-api-key-here
LLM_API_BASE=https://openrouter.ai/api/v1
LLM_MODEL_NAME=your-model-name-here

# =============================================================================
# Summary Model API (for representation generation)
# =============================================================================
SUMMARY_API_KEY=your-summary-api-key-here
SUMMARY_API_BASE=https://your-summary-api-endpoint.com
SUMMARY_MODEL_NAME=your-summary-model-name

# =============================================================================
# Embedding Model (BGE-M3 for attention scoring)
# =============================================================================
BGE_M3_MODEL_PATH=/path/to/bge-m3-model
BGE_M3_USE_FP16=true

# =============================================================================
# Python Sandbox (for code execution)
# =============================================================================
SANDBOX_FUSION_ENDPOINT=your-sandbox-endpoints-comma-separated

# =============================================================================
# File Parsing (Dashscope)
# =============================================================================
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
VIDEO_MODEL_NAME=qwen-omni-turbo
VIDEO_ANALYSIS_MODEL_NAME=qwen-plus-latest

# =============================================================================
# Google Scholar Search (Serper.dev)
# =============================================================================
SERPER_KEY_ID=your-serper-api-key-here

# =============================================================================
# Evaluation APIs
# =============================================================================
API_KEY=your-evaluation-api-key
API_BASE=your-evaluation-api-base
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Dynamic Context Focusing Settings
# =============================================================================
ENABLE_DYNAMIC_CONTEXT=true
MAX_CONTEXT_TOKENS=100000
NUM_RECENT_FULL=2
MAX_LLM_CALL_PER_RUN=100

# Attention thresholds (relative to uniform distribution)
ATTENTION_THRESHOLD_A=0.3
ATTENTION_THRESHOLD_B=0.7
ATTENTION_THRESHOLD_C=1.5

# =============================================================================
# Timeouts
# =============================================================================
VISIT_SERVER_TIMEOUT=200
WEBCONTENT_MAXLENGTH=150000
VISIT_SERVER_MAX_RETRIES=1
